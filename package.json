{
  "name": "mcp-planning-server",
  "version": "0.2.0",
  "description": "MCP server for planning document management",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "mcp-planning-server": "./dist/index.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "planning",
    "document-management",
    "ai",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-planning-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "micromatch": "^4.0.8",
    "open": "^10.2.0",
    "quickjs-emscripten": "^0.31.0",
    "which": "^4.0.0",
    "yaml": "^2.7.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "tests/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.0.9",
    "@types/which": "^3.0.4",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  }
}
