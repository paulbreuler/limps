{
  "name": "@sudosandwich/limps-headless",
  "version": "0.1.5",
  "description": "limps extension for headless UI contract extraction, semantic analysis, and drift detection",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && node scripts/prepare-publish.cjs",
    "postpublish": "node scripts/cleanup-publish.cjs"
  },
  "keywords": [
    "limps",
    "headless-ui",
    "radix-ui",
    "mcp",
    "extension"
  ],
  "author": "Paul Breuler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulbreuler/limps.git",
    "directory": "packages/limps-headless"
  },
  "files": [
    "dist",
    "bin",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "limps-headless": "bin/limps-headless"
  },
  "peerDependencies": {
    "@sudosandwich/limps": "^2.0.0"
  },
  "devDependencies": {
    "@sudosandwich/limps": "*",
    "@types/node": "^25.0.0",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.0",
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "semver": "^7.7.3",
    "ts-morph": "^24.0.0",
    "zod": "^4.3.6"
  }
}
